{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "KeycloakSettings": {
    "Realm": "restorate",
    "ClientId": "restorate_gateway",
    "ClientSecret": "code",
    "Audience": "restorate_gateway"
  },

  "ReverseProxy": {
    "Routes": {
      "restaurants-anonymous-routes": {
        "ClusterId": "Restaurant",
        "AuthorizationPolicy": "anonymous",
        "Order": 1,
        "Match": {
          "Methods": [ "GET" ],
          "Path": "/api/restaurants/{**catch-all}" 
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api"
          }
        ]
      },
      "restaurants-protected-routes": {
        "ClusterId": "Restaurant",
        "AuthorizationPolicy": "default",
        "Order": 2,
        "Match": {
          "Path": "/api/restaurants/{**catch-all}" 
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api"
          }
        ]
      }
    },
    "Clusters": {
      "Restaurant": {
        "Destinations": {
          "destination1": {
            "Address": "https+http://ServiceRestaurantApi"
          }
        }
      }
    }
  }
}
