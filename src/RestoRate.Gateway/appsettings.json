{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "KeycloakSettings": {
    "Realm": "restorate",
    "ClientId": "restorate_gateway",
    "ClientSecret": "code",
    "Audience": "restorate_gateway"
  },

  "ReverseProxy": {
    "Routes": {
      "restaurants-route": {
        "ClusterId": "Restaurant",
        "Match": {
          "Path": "/restaurants/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "Restaurant": {
        "Destinations": {
          "destination1": {
            "Address": "https+http://ServiceRestaurantApi"
          }
        }
      }
    }
  }
}
