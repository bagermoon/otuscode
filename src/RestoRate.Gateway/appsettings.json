{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "KeycloakSettings": {
    "Realm": "restorate",
    "ClientId": "restorate_gateway",
    "ClientSecret": "code",
    "Audience": "restorate_gateway"
  },

  "ReverseProxy": {
    "Routes": {
      "restaurants-protected-routes": {
        "ClusterId": "Restaurant",
        "AuthorizationPolicy": "Anonymous",
        "OutputCachePolicy": "GatewayPublicCache",
        "Match": {
          "Path": "/api/restaurants/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api"
          }
        ]
      },
      "reviews-route": {
        "ClusterId": "Review",
        "Match": {
          "Path": "/reviews/{**catch-all}"
        },
        "AuthorizationPolicy": "Default"
      }
    },
    "Clusters": {
      "Restaurant": {
        "Destinations": {
          "destination1": {
            "Address": "https+http://ServiceRestaurantApi"
          }
        }
      },
      "Review": {
        "Destinations": {
          "destination1": {
            "Address": "https+http://ServiceReviewApi"
          }
        }
      }
    }
  }
}
