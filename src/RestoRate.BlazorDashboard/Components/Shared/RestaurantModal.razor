@using RestoRate.Contracts.Restaurant.DTOs
@using MudBlazor

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h5">@Restaurant.Name</MudText>
    </TitleContent>

    <DialogContent>
        <MudText Typo="Typo.body2" Color="Color.Secondary">
            @Restaurant.Address.FullAddress, @Restaurant.Address.House
        </MudText>

        <div class="mt-3">
            <MudText Typo="Typo.subtitle2">Кухни</MudText>
            <MudChipSet T="string" ReadOnly="true">
                @foreach (var c in Restaurant.CuisineTypes)
                {
                    <MudChip T="string" Value="@c" Color="Color.Primary" Variant="Variant.Filled">@c</MudChip>
                }
            </MudChipSet>
        </div>

        <div class="mt-3">
            <MudText Typo="Typo.subtitle2">Теги</MudText>
            <MudChipSet T="string" ReadOnly="true">
                @foreach (var t in Restaurant.Tags)
                {
                    <MudChip T="string" Value="@t" Variant="Variant.Outlined">@t</MudChip>
                }
            </MudChipSet>
        </div>
    </DialogContent>

    <DialogActions>
        <MudButton OnClick="Close">Закрыть</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] public IMudDialogInstance MudDialog { get; set; } = default!;
    [Parameter] public RestaurantDto Restaurant { get; set; } = default!;

    private void Close() => MudDialog.Close();
}
